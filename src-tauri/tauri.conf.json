{
  "productName": "relay",
  "version": "0.5.1-beta",
  "identifier": "org.holochain.relay",
  "build": {
    "beforeBuildCommand": "npm run build -w ui",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../ui/build"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "width": 360,
        "height": 800,
        "decorations": true,
        "url": "splashscreen.html",
        "label": "splashscreen"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
